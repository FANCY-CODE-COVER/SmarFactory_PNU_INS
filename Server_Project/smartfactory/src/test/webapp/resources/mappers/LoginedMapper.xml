<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 해당 부분의 namespace는 project package + Mapper Package + Mapper Interface 이름입니다. -->
<mapper namespace="com.pnu.spring.smartfactory.Mapper.LoginMapper" >
<!-- 해당 부분의 id는 MapperClass의 함수 이름과 유사하여야 합니다. -->
	<select id="trylogin"  resultType="String" parameterType="hashmap">
		SELECT COUNT(*) CNT FROM SYS_USER WHERE USER_ID=#{user_id} AND PASSWORD=#{password}
	</select>
</mapper>